rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users Collection
    match /users/{userId} {
      allow read: if resource.data.Voucher is string;
      allow write: if false;
    }

    // Nominees Collection
    match /nominees/{nomineeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Election Results Collection
    match /electionresults/{resultId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Votes Collection
    match /votes/{voteId} {
      allow read: if true;
      allow write: if request.auth != null &&
                   request.resource.data.Voucher is string &&
                   request.resource.data.Candidate is string &&
                   request.resource.data.Position is string &&
                   request.resource.data.Department is string &&
                   request.resource.data.Timestamp is timestamp &&
                   request.resource.data.validFrom is timestamp &&
                   request.resource.data.validTo is timestamp &&
                   request.time >= request.resource.data.validFrom &&
                   request.time <= request.resource.data.validTo;
    }
  }
}
